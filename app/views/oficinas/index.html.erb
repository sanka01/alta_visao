
<h1>Oficinas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Dono</th>
      <th>Endereco</th>
      <th>Franquia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oficinas.each do |oficina| %>
      <tr>
        <td><%= oficina.nome %></td>
        <td><%= oficina.usuario %></td>
        <td><%= oficina.endereco %></td>
        <td><%= oficina.franquia %></td>
        <td><%= link_to t(:show), oficina, :class => "btn btn-info"  %></td>
        <td><%= link_to t(:edit), edit_oficina_path(oficina), :class => "btn btn-warning"  %></td>
        <td><%= link_to t(:destroy), oficina, method: :delete, data: { confirm: t(:confirm_delete) }, :class => "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Oficina', new_oficina_path %>
